<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF1F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewColor"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! My name is Tokei."
        android:textColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <!--
        android:background="#102164"
        android:background="#6C757D"
        android:background="#FFC107"
         -->

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/ic_settings_black_36dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:text="Settings"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnReport"
        app:layout_constraintTop_toBottomOf="@+id/btnChat" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/ic_forum_black_36dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:text="Chat!"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTesting"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Button
        android:id="@+id/btnTesting"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/ic_timer_black_36dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:text="Quick Session"
        android:textAlignment="center"
        android:textColor="#191919"
        app:layout_constraintEnd_toStartOf="@+id/btnChat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Button
        android:id="@+id/btnReport"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/ic_book_black_36dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        android:text="Report"
        android:textAlignment="center"
        android:textColor="#191919"
        app:layout_constraintEnd_toStartOf="@+id/btnSetting"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTesting" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="130dp"
        android:background="#FFFFFF"
        android:drawableEnd="@drawable/ic_chevron_right_black_48dp"
        android:paddingStart="32sp"
        android:paddingEnd="24dp"
        android:text="Start\nSession"
        android:textAlignment="textStart"
        android:textColor="#191919"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="46dp"
        android:background="#00DC3545"
        android:text="Hi, let's play and learn"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>